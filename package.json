{
  "name": "flexgrid",
  "version": "1.0.0",
  "description": "A simple and flexible grid system created with flexbox using scss",
  "scripts": {
    "scss": "node-sass scss/flexgrid.scss ./flexgrid.css --output-style expanded",
    "minify": "node-sass scss/flexgrid.scss ./flexgrid.min.css --output-style compressed",
    "prefix": "postcss --replace ./flexgrid.css ./flexgrid.min.css",
    "build": "run-p scss minify prefix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valmisson/flexgrid.git"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "grid-system",
    "mobile-first",
    "responsive",
    "front-end",
    "web"
  ],
  "author": "Valmisson Grizorte <missongrizorte@gmail.com> (https://valmisson.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valmisson/flexgrid/issues"
  },
  "homepage": "https://github.com/valmisson/flexgrid#readme",
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "devDependencies": {
    "autoprefixer": "10.2.6",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1"
  }
}
